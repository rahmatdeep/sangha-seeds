generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String      @id @default(uuid())
  name                 String
  email                String      @unique
  password             String
  mobile               String
  role                 UserRoles
  areaOfResponsibility String?
  warehouseid          String?
  warehouse            Warehouse?  @relation(fields: [warehouseid], references: [id], name: "assignedWarehouse")
  managedWarehouses    Warehouse[] @relation("managedWarehouse")
  assginedOrders       Order[]     @relation("EmployeeOrders")
  createdOrders        Order[]     @relation("CreatedOrders")
  managedOrders        Order[]     @relation("ManagerOrders")
  acknowledgedOrders   Order[]     @relation("AcknowledgeOrder")
  completedOrders      Order[]     @relation("CompleteOrder")
  remarks              String?
}

model Warehouse {
  id                 String  @id @default(uuid())
  name               String
  location           String
  maxStorageCapacity String?
  maxDryingCapacity  String?
  assignedEmployees  User[]  @relation("assignedWarehouse")
  assignedManagerId  String?
  assignedManager    User?   @relation(fields: [assignedManagerId], references: [id], name: "managedWarehouse")
  lots               Lot[]
  orders             Order[]
  remarks            String?
}

model Lot {
  id             String      @id @default(uuid())
  lotNo          String
  varietyId      String
  variety        Variety     @relation(fields: [varietyId], references: [id])
  quantity       Int
  quantityOnHold Int
  size           PotatoSizes
  storageDate    DateTime?
  expiryDate     DateTime?
  warehouseId    String?
  warehouse      Warehouse?  @relation(fields: [warehouseId], references: [id])
  orders         Order[]
  remarks        String?
}

model Variety {
  id   String @id @default(uuid())
  name String @unique
  lots Lot[]
}

model Order {
  id                String      @id @default(uuid())
  destination       String?
  lotId             String
  lot               Lot         @relation(fields: [lotId], references: [id])
  quantity          Int
  warehouseId       String
  warehouse         Warehouse   @relation(fields: [warehouseId], references: [id])
  createdById       String
  createdBy         User        @relation(fields: [createdById], references: [id], name: "CreatedOrders")
  assignedManagerId String
  assignedManager   User        @relation(fields: [assignedManagerId], references: [id], name: "ManagerOrders")
  assignedEmployees User[]      @relation("EmployeeOrders")
  createdAt         DateTime    @default(now())
  updatedAt         DateTime?
  completedAt       DateTime?
  isComplete        Boolean
  completedById     String?
  completedBy       User?       @relation(fields: [completedById], references: [id], name: "CompleteOrder")
  isAcknowledged    Boolean
  acknowledgedById  String?
  acknowledgedBy    User?       @relation(fields: [acknowledgedById], references: [id], name: "AcknowledgeOrder")
  acknowledgedAt    DateTime?
  remarks           String?
  status            OrderStatus @default(placed)
}

enum UserRoles {
  Administrator
  Manager
  ReadOnlyManager
  Employee
}

enum PotatoSizes {
  Seed
  Soot12
  Soot11
  Soot10
  Soot8
  Soot4to6
  Soot4to8
}

enum OrderStatus {
  placed
  acknowledged
  completed
}
